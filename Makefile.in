#==============================================================================
# MAKEFILE_IN

#==============================================================================
# directories
WORK_DIR = $(HOME)/Documents/code/bem_ax
INSTALL_DIR = $(HOME)/Documents/install
LAPACK_DIR = $(INSTALL_DIR)/lapack-3.5.0
ATLAS_DIR = $(INSTALL_DIR)/atlas-3.10.2/lib

#==============================================================================
# libraries
LAPACK_LIB = $(LAPACK_DIR)/liblapack.a
LAPACKE_LIB = $(LAPACK_DIR)/liblapacke.a
BLAS_LIB = $(LAPACK_DIR)/librefblas.a
CBLAS_LIB = $(ATLAS_DIR)/lib/libcblas.a
ATLAS_LIB = $(ATLAS_DIR)/lib/libatlas.a

LIBRARIES= $(LAPACKE_LIB) $(LAPACK_LIB) $(BLAS_LIB) $(CBLAS_LIB) $(ATLAS_LIB)

#==============================================================================
# includes
LAPACKE_INC = -I $(LAPACK_DIR)/lapacke/include
#ATLAS_INC = -I $(ATLAS_DIR)/include -I $(ATLAS_DIR)/include/atlas
# NOTE: linking ATLAS header files seems to cause linker errors w/LAPACKE header files...

INCLUDES = $(LAPACKE_INC)

#==============================================================================
# loader
LOADER = gfortran
LOADOPTS =

#==============================================================================
# compiler
CC = g++
CLFAGS = -O3
#WARN = -Wall

COMPILE = $(CC) -c $(CFLAGS) $(INCLUDES)

